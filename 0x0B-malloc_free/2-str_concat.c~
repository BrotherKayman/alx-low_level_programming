#include <stdlib.h>
#include <stdio.h>

/**
 * str_concat - Concatenates two strings
 * @s1: The first string
 * @s2: The second string
 *
 * Return: Pointer to newly allocated memory containing concatenated string,
 *         or NULL on failure
 */
char *str_concat(char *s1, char *s2)
{
  char *concat;
  int x = 0, y = 0, i = 0, j = 0;

  if (s1 == NULL)
    s1 = "";
  if (s2 == NULL)
    s2 = "";

  while (s1[len1])
    len1++;
  while (s2[len2])
    len2++;

  concat = malloc((len1 + len2 + 1) * sizeof(char));
  if (concat == NULL)
    return (NULL);

  while (s1[i])
    {
      concat[i] = s1[i];
      i++;
    }
  while (s2[j])
    {
      concat[i + j] = s2[j];
      j++;
    }
  concat[i + j] = '\0';

  return (concat);
}
